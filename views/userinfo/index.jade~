        input(id='last_last_name',name='user[last_name]', value=user.last_name || '')
      div
        label(for='user_full_name') Full Name:
        input(id='user_full_name', name='user[full_name]', value=user.first_name +'&nbsp;'+ user.last_name || '')
      div
        label(for='user_age') Age:
        input(id='user_age',name='user[age]', value=user.age || '')
      div
